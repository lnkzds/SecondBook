<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:text="返回"
        android:textSize="20sp"
        android:textColor="@color/yellow"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/back"
        />
    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:padding="5dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="22sp"

            android:gravity="center"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/book"
            android:scaleType="fitXY"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout"
        android:layout_marginTop="15dp"
        android:hint="手机号(11位数字)"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/mobile"
        android:background="@null"
        android:drawablePadding="10dp"
        android:maxLines="1"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/getCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取验证码"
        android:textColor="@color/yellow"
        android:layout_alignBottom="@+id/mobile"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>
    <LinearLayout
        android:background="@color/grad"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/mobile"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <EditText
        android:id="@+id/verificationCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobile"
        android:layout_marginTop="20dp"
        android:hint="验证码"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/verification"
        android:drawablePadding="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:background="@null"/>
    <LinearLayout
        android:background="@color/grad"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/verificationCode"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verificationCode"
        android:layout_marginTop="20dp"
        android:hint="密码"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:background="@null"/>
    <ImageView
        android:id="@+id/eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eye"
        android:layout_alignBottom="@+id/password"
        android:layout_alignRight="@+id/getCode"
        android:layout_marginRight="5dp"/>
    <LinearLayout
        android:background="@color/grad"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/password"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginTop="20dp"
        android:hint="昵称(只能有中英文和数字哦)"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/account"
        android:drawablePadding="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:background="@null"/>
    <LinearLayout
        android:background="@color/grad"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <ImageView
        android:id="@+id/xuehua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/select"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/xuehua"
        android:layout_toRightOf="@+id/xuehua"
        android:layout_marginLeft="15dp"
        android:id="@+id/rg_1"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="男"
            android:id="@+id/rb_1"/>
        <RadioButton
            android:layout_marginLeft="20dp"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="女"
            android:id="@+id/rb_2"/>
    </RadioGroup>


    <LinearLayout
        android:background="@color/grad"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/xuehua"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <Button
        android:id="@+id/registered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="注册"
        android:textSize="18sp"
        android:layout_below="@+id/xuehua"
        android:layout_marginTop="25dp"
        android:background="@drawable/login_press"/>
</RelativeLayout>